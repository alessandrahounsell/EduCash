<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN"
    android:id="@+id/drawer_layout"
    tools:context=".Settings_Screen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Your existing content goes here -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="110dp"
            android:textSize="45sp"
            android:fontFamily="@font/moul"
            android:text="EduCash"
            android:textColor="@color/blue" />

        <View
            android:layout_width="415dp"
            android:layout_height="115dp"
            android:background="@color/dark_blue" />

        <ImageView
            android:layout_width="94dp"
            android:layout_height="72dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/educashlogo" />


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/number_input_blue_box"
            android:layout_marginTop="135dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>

        <View
            android:layout_width="255dp"
            android:layout_height="70dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="305dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_light_blue_box" />

        <TextView
            android:id="@+id/usernametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter 6-digit pin"
            android:fontFamily="@font/mplus"
            android:textSize="35sp"
            android:textColor="@color/blue"
            android:layout_marginTop="235dp"
            android:layout_marginLeft="55dp" />

        <TextView
            android:id="@+id/pinpasswordtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Re-enter 6-digit pin"
            android:fontFamily="@font/mplus"
            android:textSize="30sp"
            android:textColor="@color/blue"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="55dp" />

        <TextView
            android:id="@+id/pinrepasswordtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/mplus"
            android:text="Create Pin"
            android:textColor="@color/blue"
            android:textSize="45sp" />

        <EditText
            android:id="@+id/usernameenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textSize="15sp"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/mplus"
            android:text="Enter Username"
            android:layout_marginTop="305dp"
            android:layout_marginLeft="85dp"/>

        <View
            android:layout_width="255dp"
            android:layout_height="70dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="480dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_light_blue_box" />

        <EditText
            android:id="@+id/passwordenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textSize="15sp"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/mplus"
            android:text="Enter Password"
            android:layout_marginTop="480dp"
            android:layout_marginLeft="85dp"/>


        <Button
            android:id ="@+id/SumbitButton"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="600dp"
            android:layout_centerHorizontal="true"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop"
            android:textSize="45sp"
            android:fontFamily="@font/mplus"
            android:text="SUBMIT"
            android:textColor="@color/pink" />

        <Button
            android:id ="@+id/SkipfornowButton"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="700dp"
            android:layout_centerHorizontal="true"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop"
            android:textSize="30sp"
            android:fontFamily="@font/mplus"
            android:text="Skip for now"
            android:textColor="@color/blue" />



    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="225dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/blue"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemTextAppearance="@style/NavTextStyle">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
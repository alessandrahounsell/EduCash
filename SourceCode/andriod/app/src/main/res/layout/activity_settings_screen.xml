<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    style="@style/SCREEN"
    tools:context=".Settings_Screen">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- android:background="@color/green" -->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="110dp"
            android:textSize="37sp"
            android:fontFamily="@font/moul"
            android:text="Settings"
            android:textColor="@color/blue" />

        <View
            android:layout_width="415dp"
            android:layout_height="115dp"
            android:background="@color/dark_blue" />

        <ImageView
            android:contentDescription="home"
            android:layout_width="94dp"
            android:layout_height="72dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/educashlogo" />

        <Button
            android:id="@+id/logo_btn"
            android:layout_width="94dp"
            android:layout_height="72dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop" />

        <ImageView
            android:contentDescription="menu"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_marginStart="340dp"
            android:layout_marginTop="28dp"
            android:scaleType="centerCrop"
            android:src="@drawable/menua"
            android:onClick="openDrawer" />

        <Button
            android:id="@+id/menu_button"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_marginStart="340dp"
            android:layout_marginTop="28dp"
            android:scaleType="centerCrop"
            android:background="#00FFFFFF"/>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="135dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/number_input_blue_box" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="300dp"
            android:background="@drawable/offbutton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textOn=""
            android:textOff=""
            android:checked="false" />

        <ToggleButton
            android:id="@+id/switcher"
            android:layout_marginTop="445dp"
            android:layout_marginLeft="300dp"
            android:background="@drawable/offbutton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textOn=""
            android:textOff=""
            android:checked="false" />
            <!-- app:thumbCompat="@drawable/custom_thumb_selector" -->

        <TextView
            android:id="@+id/pinLoginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignStart="@+id/view2"
            android:elevation="1dp"
            android:layout_marginTop="165dp"
            android:layout_marginStart="35dp"
            android:textSize="30sp"
            android:fontFamily="@font/mplus"
            android:text="Pin Login"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/greenBackgroundText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="425dp"
            android:layout_marginStart="35dp"
            android:textSize="30sp"
            android:fontFamily="@font/mplus"
            android:text="Green Background"
            android:textColor="@color/blue" />


        <Button
            android:id="@+id/tandc_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="650dp"
            android:layout_marginBottom="0dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/mplus"
            android:text="@string/Terms"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="350dp"
            android:fontFamily="@font/mplus"
            android:text="Accessibility"
            android:textColor="@color/pink"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/textSizeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="530dp"
            android:layout_marginStart="35dp"
            android:text="Text Size:"
            android:textColor="@color/blue"
            android:fontFamily="@font/mplus"
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/textSizeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="530dp"
            android:layout_marginStart="245dp"
            android:key="textSizePreference"
            android:title="Text Size"
            android:summary="Select text size"
            android:entries="@array/text_size_options"
            android:entryValues="@array/text_size_values"
            android:defaultValue="default"
            android:popupBackground="@color/dark_blue">

        </Spinner>

        <Button
            android:id="@+id/help_button"
            android:text="@string/Help"
            android:onClick="openURL1"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="600dp"
            android:layout_marginTop="580dp"
            android:layout_marginBottom="0dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/mplus"
            android:scaleType="centerCrop"
            android:textColor="@color/blue"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/logout_button"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/view2"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="700dp"
            android:layout_marginEnd="700dp"
            android:layout_marginBottom="0dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/mplus"
            android:scaleType="centerCrop"
            android:text="Log Out"
            android:textColor="@color/pink"
            android:textSize="45sp" />



        <ToggleButton
            android:id="@+id/toggleButton1"
            android:layout_marginTop="265dp"
            android:layout_marginLeft="300dp"
            android:background="@drawable/offbutton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textOn=""
            android:textOff=""
            android:checked="false" />

        <TextView
            android:id="@+id/overdraftText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:layout_marginTop="265dp"
            android:layout_marginStart="35dp"
            android:textSize="30sp"
            android:fontFamily="@font/mplus"
            android:text="Overdraft on"
            android:textColor="@color/blue" />


    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        style="@style/TEXT"
        android:id="@+id/navigation_view"
        android:layout_width="225dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/blue"
        android:textColor="@color/dark_blue"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemTextAppearance="@style/NavTextStyle">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>